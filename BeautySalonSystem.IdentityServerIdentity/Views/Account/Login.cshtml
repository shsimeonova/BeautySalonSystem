@model LoginViewModel
<!-- Portfolio Section-->
<section class="page-section login-page">
    <div class="container align-content-center">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Вход</h2>
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-leaf"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row">
            <div class="col-sm-6">
               <div class="card">
                   <div class="card-body">
                       <partial name="_ValidationSummary" />
                       <form asp-route="Login">
                           <input type="hidden" asp-for="ReturnUrl" />

                           <div class="form-group">
                               <label asp-for="Username">Потребителско име</label>
                               <input class="form-control" asp-for="Username" autofocus>
                           </div>
                           <div class="form-group">
                               <label asp-for="Password">Парола</label>
                               <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                           </div>
                           <div>
                               <p>Admin username: admin, password: Adm1nPa$$123</p>
                               <p>Existing user: _simona_, password: 11223344Aa!</p>
                           </div>

                           <button class="btn btn-primary" name="button" value="login">Вход</button>
                           <button class="btn btn-secondary" name="button" value="cancel" asp-route="@Model.ReturnUrl">Назад</button>
                           <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш профил? Регистрирай се!</a>
                       </form>
                   </div>
               </div>
           </div>
        </div>
    </div>
</section>