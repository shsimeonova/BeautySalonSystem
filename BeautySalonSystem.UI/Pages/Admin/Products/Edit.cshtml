@page
@model BeautySalonSystem.UI.Pages.Admin.Products.Edit

@{
    ViewData["Title"] = "Edit Product";
}

<header class="masthead-admin bg-primary text-white text-center">
    <div class="masthead-admin-container d-flex align-items-center flex-column">
        <h1 class="masthead-heading text-uppercase mb-0 text-white">Редактирай</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-leaf"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0"></p>
    </div>
</header>

<div class="container col-6">
    <form method="post">
        <input type="hidden" asp-for="Id" value="@Model.ViewModel.Id">
        <div class="form-group">
            <label asp-for="Name" class="col-form-label col-md-2">Име</label>
            <span asp-validation-for="Name" class="validation-message-span"></span>
            <input type="text" class="form-control" asp-for="Name" value="@Model.ViewModel.Name"
                  data-val="true"
                  data-val-minlength="Името на услугата трябва да е минимум 3 символа."
                  data-val-required="Полето е задължително.">
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-form-label col-md-2">Тип</label>
            <select class="form-control" asp-for="Type" asp-items="Model.TypeOptions" value="@Model.ViewModel.Type"></select>
        </div>
        <div class="form-group">
            <label asp-for="Price">Цена</label>
            <span asp-validation-for="Price" class="validation-message-span"></span>
            <input type="number" class="form-control" asp-for="Price" value="@Model.ViewModel.Price"
                   data-val="true"
                   data-val-minlength="Името на услугата трябва да е минимум 3 символа."
                   data-val-required="Полето е задължително.">
        </div>
        <div class="form-group">
            <button class="btn btn btn-warning text-white">Запази</button>
        </div>
    </form>
</div>
