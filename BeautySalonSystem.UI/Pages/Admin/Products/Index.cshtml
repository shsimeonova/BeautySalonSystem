@page
@model BeautySalonSystem.UI.Pages.Admin.Products.ProductsIndex

@{
  ViewData["Title"] = "Admin Products Index";
}

<header class="masthead-admin bg-primary text-white text-center">
  <div class="masthead-admin-container d-flex align-items-center flex-column">
    <h1 class="masthead-heading text-uppercase mb-0 text-white">Услуги</h1>
    <!-- Icon Divider-->
    <div class="divider-custom divider-light">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon"><i class="fas fa-leaf"></i></div>
      <div class="divider-custom-line"></div>
    </div>
    <!-- Masthead Subheading-->
    <p class="masthead-subheading font-weight-light mb-0"></p>
  </div>
</header>

<div class="container align-content-center admin-products-actions">
  <a class="btn btn-default" href="@Url.Page("/Admin/Index")"><i class="fas fa-chevron-left"></i> Обратно</a>
  <a class="btn btn-success" href="@Url.Page("/Admin/Products/Create")"><i class="fas fa-plus"></i> Добави</a>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Име</th>
      <th scope="col">Цена</th>
      <th scope="col">Тип</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.AllProducts != null)
    {
      foreach (var product in Model.AllProducts)
      {
        <tr>
          <th scope="row">@product.Id</th>
          <td>@product.Name</td>
          <td>@product.Price</td>
          <td>@product.Type</td>
          <td class="admin-products-actions d-flex">
            <form class="admin-products-actions-item" asp-page-handler="DeleteProduct" method="post">
              <input name="id" type="hidden" value="@product.Id"/>
              <button class="btn btn-danger">Изтрий</button>
            </form>
            <a class="btn btn-warning text-white admin-products-actions-item" asp-page="@Url.Page("/Admin/Products/Edit")" asp-route-id="@product.Id">Редактирай</a>
          </td>
        </tr>
      }
    }
  </tbody>
</table>